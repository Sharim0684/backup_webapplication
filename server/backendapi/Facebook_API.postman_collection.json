{
    "info": {
        "_postman_id": "fb-auth-collection",
        "name": "Facebook API Auth",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Facebook Login URL",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/facebook-login",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["facebook-login"]
                }
            }
        },
        {
            "name": "Facebook Callback",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/callback?code={{auth_code}}",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["callback"],
                    "query": [
                        {
                            "key": "code",
                            "value": "{{auth_code}}"
                        }
                    ]
                }
            }
        },
        {
            "name": "Dashboard",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://127.0.0.1:8000/dashboard",
                    "protocol": "http",
                    "host": ["127", "0", "0", "1"],
                    "port": "8000",
                    "path": ["dashboard"]
                }
            }
        }
    ]
}
